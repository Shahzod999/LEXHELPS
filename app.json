{
  "expo": {
    "name": "LexHelps",
    "slug": "LexHelps",
    "version": "1.0.31",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "LexHelps",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "scheme": "LexHelps",
      "supportsTablet": true,
      "bundleIdentifier": "com.cdlcarolinas.lex",
      "associatedDomains": ["applinks:lexhelps.com"],
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSLocationWhenInUseUsageDescription": "This app uses your location to provide relevant news in your region.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses your location to provide relevant news in your region.",
        "NSCameraUsageDescription": "Lex uses the camera to scan legal documents, identification cards, and other important papers. Your photos are processed locally and used only for document analysis.",
        "NSPhotoLibraryUsageDescription": "Lex uses gallery access so you can select and upload photos or documents from your device.",
        "CFBundleAllowMixedLocalizations": true,
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": ["LexHelps"]
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.cdlcarolinas.lex",
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "LexHelps",
              "host": "lexhelps.com",
              "pathPrefix": "/reset-password"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.CAMERA"
      ]
    },
    "locales": {
      "en": "./locales/ios/en.json",
      "fr": "./locales/ios/fr.json",
      "es": "./locales/ios/es.json",
      "de": "./locales/ios/de.json",
      "ru": "./locales/ios/ru.json",
      "it": "./locales/ios/it.json",
      "pt": "./locales/ios/pt.json",
      "ar": "./locales/ios/ar.json",
      "hi": "./locales/ios/hi.json",
      "ja": "./locales/ios/ja.json",
      "ko": "./locales/ios/ko.json",
      "zh": "./locales/ios/zh.json"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Lex uses your location to show news and events in your region.",
          "locationWhenInUsePermission": "Lex uses your location only while using the app to provide personalized data."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Lex uses the camera to scan legal documents, identification cards, and other important papers. Photos are processed locally and not transmitted to the server."
        }
      ],
      [
        "expo-image-picker",
        {
          "cameraPermission": "Lex uses the camera to scan legal documents, identification cards, and other important papers.",
          "photosPermission": "Photo access is needed so you can upload documents and images from your gallery."
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "submit": {
      "production": {
        "ios": {
          "appleId": "yesdoni@icloud.com",
          "ascAppId": "6747161585",
          "appleTeamId": "3SZQ9MW3F4"
        }
      }
    },
    "extra": {
      "router": {
        "origin": "https://lexhelps.com"
      },
      "eas": {
        "projectId": "890d9bd2-badc-41f2-b5ea-100f99d5d35b"
      }
    }
  }
}
